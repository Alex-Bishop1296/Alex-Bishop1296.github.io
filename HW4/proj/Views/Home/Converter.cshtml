@{
    ViewBag.Title = "Converter";
}
@* use the viewbag for the header here*@
<h2>@ViewBag.Message</h2>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Converter</title>
</head>
<body>
    <div>
        <form method="get" form action="/Home/Converter">
            <div class="row">

                <!-- Div for the number input-->
                <div class="col-md-6">
                    <h4><b>Miles</b></h4>
                    <input type="number" name="miles" min="1" required/>
                </div>

                <!-- Div for the radio buttons-->
                <div class="col-md-6">
                    <!-- Breakline -->
                    <hr>
                    <!-- Radio buttons for each of the options for the mile conversions-->
                    <input type="radio" name="units" value="millimeters" checked>Millimeters<br>
                    <input type="radio" name="units" value="centimeters">Centimeters<br>
                    <input type="radio" name="units" value="meters">Meters<br>
                    <input type="radio" name="units" value="kilometers">Kiloimeters<br>
                </div>

            </div>
            <!-- Button to do the calculations-->
            <div class="row center-block">
                <button class="btn btn-primary" type="submit">Convert</button>
                @if (ViewBag.statement != null)
                {
                    <h2>@ViewBag.statement</h2>
                }

            </div>
        </form>
    </div>
</body>
